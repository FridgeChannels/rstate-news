# Supabase Configuration
SUPABASE_URL=your_supabase_project_url
SUPABASE_KEY=your_supabase_anon_key

# Debug Mode Configuration
# 设置为 true 时，直接执行所有激活源的采集任务，忽略调度器和update_frequency
DEBUG_MODE=false

# Scheduler Configuration
# 生产环境“每天跑一次”推荐：设为 false，用系统/云 cron 每天执行 python main.py
SCHEDULER_ENABLED=true
SCHEDULER_TIMEZONE=America/New_York
SCHEDULER_HOUR=2
SCHEDULER_MINUTE=0

# Scraping Configuration
SCRAPE_DELAY_MIN=1
SCRAPE_DELAY_MAX=3
SCRAPE_RETRY_MAX=3
SCRAPE_TIME_RANGE_DAYS=7

# Notification Configuration
NOTIFICATION_ENABLED=true
NOTIFICATION_TYPE=log
# Options: log, email

# Email Configuration (if NOTIFICATION_TYPE=email)
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USER=your_email@gmail.com
SMTP_PASSWORD=your_app_password
NOTIFICATION_EMAIL_TO=recipient@example.com

# Logging Configuration
LOG_LEVEL=INFO
LOG_FILE=logs/scraper.log
LOG_MAX_BYTES=10485760
LOG_BACKUP_COUNT=5
